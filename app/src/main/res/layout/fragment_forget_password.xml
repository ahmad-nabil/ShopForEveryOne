<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    tools:context=".authenticator.forgetpassword.EnterEmail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/clearsans_bold"
            android:gravity="center_horizontal"
            android:text="in order to get your account back,\n we will send a verification \n code to your email."
            android:textColor="#C7C7C7"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETforgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="50dp"
            android:hint="Email "
            android:textColorHint="@color/BtnColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clearsans_bold"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/BtnSendCode"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETforgetPass"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/BtnColor"
            android:letterSpacing=".3"
            android:text="send code"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF" />
    </RelativeLayout>
</ScrollView>