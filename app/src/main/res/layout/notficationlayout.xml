<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BtnColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titlenotfi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/clearsans_bold"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bodynotfi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/clearsans_medium"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titlenotfi"
        app:layout_constraintTop_toBottomOf="@+id/titlenotfi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="@+id/bodynotfi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titlenotfi"
        app:layout_constraintTop_toTopOf="@+id/titlenotfi"
        app:srcCompat="@drawable/bell"
        tools:srcCompat="@drawable/bell" />
</androidx.constraintlayout.widget.ConstraintLayout>