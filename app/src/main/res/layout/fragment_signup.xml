<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    tools:context=".authenticator.login.signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:fitsSystemWindows="true"
            android:hint="Full Name"
            android:textAlignment="center"
            android:textColorHint="@color/BtnColor"
            app:boxBackgroundColor="#EFEEEE"
            app:boxBackgroundMode="filled"
            app:counterEnabled="false"
            app:helperTextEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintTextColor="@color/BtnColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/FullnameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:fitsSystemWindows="true"
                android:freezesText="false"
                android:textColor="#000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETlayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETlayout3"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            android:hint="Email"
            android:textAlignment="center"
            android:textColorHint="@color/BtnColor"
            app:boxBackgroundColor="#EFEEEE"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="2dp"
            app:counterEnabled="false"
            app:helperTextEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintTextColor="@color/BtnColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EmailSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:fitsSystemWindows="true"
                android:freezesText="false"
                android:inputType="text|textEmailAddress"
                android:textColor="#000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETlayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETlayout4"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            android:hint="password"
            android:showDividers="end"
            android:textColorHint="@color/BtnColor"
            app:boxBackgroundColor="#EFEEEE"
            app:boxBackgroundMode="filled"
            app:hintTextColor="@color/BtnColor"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ETlayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETlayout5"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            android:hint="re password"
            android:showDividers="end"
            android:textColorHint="@color/BtnColor"
            app:boxBackgroundColor="#EFEEEE"
            app:boxBackgroundMode="filled"
            app:hintTextColor="@color/BtnColor"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repasswordsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETlayout6"
            android:layout_alignLeft="@id/ETlayout6"
            android:layout_alignRight="@id/ETlayout6"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/BtnColor"
            android:text="sign-up"
            app:cornerRadius="10dp" />

    </RelativeLayout>

</ScrollView>